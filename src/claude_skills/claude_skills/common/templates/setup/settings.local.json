{
  "_comment": "Default permission manifest for .claude/settings.local.json",
  "_description": "Copy this file to .claude/settings.local.json to bootstrap Claude Code guardrails for the SDD Toolkit.",
  "permissions": {
    "_description": "Buckets that control how Claude can invoke skills, CLI commands, and filesystem operations.",
    "_allow_description": "Always-on permissions that unblock core SDD workflows.",
    "_ask_description": "Operations that require an explicit user approval in the IDE.",
    "_deny_description": "Operations that remain disallowed even when requested.",
    "allow": [
      "_comment_skills_qualified: Skills (fully qualified with plugin namespace)",
      "Skill(sdd-toolkit:run-tests)",
      "Skill(sdd-toolkit:sdd-plan)",
      "Skill(sdd-toolkit:sdd-next)",
      "Skill(sdd-toolkit:sdd-update)",
      "Skill(sdd-toolkit:sdd-pr)",
      "Skill(sdd-toolkit:sdd-plan-review)",
      "Skill(sdd-toolkit:sdd-validate)",
      "Skill(sdd-toolkit:sdd-render)",
      "Skill(sdd-toolkit:sdd-fidelity-review)",
      "Skill(sdd-toolkit:doc-query)",
      "_comment_skills_short: Skills (short form without namespace - also needed for backward compatibility)",
      "Skill(run-tests)",
      "Skill(sdd-plan)",
      "Skill(sdd-next)",
      "Skill(sdd-update)",
      "Skill(sdd-pr)",
      "Skill(sdd-plan-review)",
      "Skill(sdd-validate)",
      "Skill(sdd-render)",
      "Skill(doc-query)",
      "_comment_commands: Slash commands",
      "SlashCommand(/sdd-begin)",
      "_comment_cli: CLI command permissions (unified sdd CLI + legacy standalone commands)",
      "Bash(sdd:*)",
      "_comment_ai_tools: AI CLI tool permissions (required for provider abstraction)",
      "Bash(cursor-agent:*)",
      "Bash(gemini:*)",
      "Bash(codex:*)",
      "_comment_testing: Testing permissions (for run-tests skill)",
      "Bash(pytest:*)",
      "Bash(python -m pytest:*)",
      "Bash(pip show:*)",
      "_comment_utilities: System utilities (commonly needed for workflows)",
      "Bash(mkdir:*)",
      "Bash(find:*)",
      "Bash(cat:*)",
      "_comment_web: Web search for documentation and debugging",
      "WebSearch",
      "_comment_git_read: Git read-only permissions (safe operations for inspecting repository state)",
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git diff:*)",
      "Bash(git show:*)",
      "Bash(git describe:*)",
      "Bash(git rev-parse:*)",
      "Bash(git ls-tree:*)",
      "Bash(gh pr view:*)",
      "_comment_git_write: Git write permissions (local operations that don't touch remotes)",
      "Bash(git checkout:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git mv:*)",
      "_comment_file_access: File access permissions",
      "Read(//**/specs/**)",
      "Read(//tmp/**)",
      "Write(//tmp/**)",
      "Write(//**/specs/active/**)",
      "Write(//**/specs/pending/**)",
      "Write(//**/specs/completed/**)",
      "Write(//**/specs/archived/**)",
      "Edit(//**/specs/active/**)",
      "Edit(//**/specs/pending/**)"
    ],
    "ask": [
      "_comment_git_write_requires_approval: Git write operations that always require approval (remotes or deletions)",
      "Bash(git push:*)",
      "Bash(gh pr create:*)",
      "Bash(git rm:*)",
      "_comment: ⚠️ Dangerous git operations requiring explicit user approval (can cause data loss or rewrite history)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(git push --force-with-lease:*)",
      "Bash(git clean -f:*)",
      "Bash(git clean -fd:*)",
      "Bash(git clean -fx:*)",
      "Bash(git reset --hard:*)",
      "Bash(git reset --mixed:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Bash(git commit --amend:*)",
      "Bash(git filter-branch:*)",
      "Bash(git filter-repo:*)",
      "Bash(git branch -D:*)",
      "Bash(git push origin --delete:*)",
      "Bash(git tag -d:*)",
      "Bash(git reflog expire:*)",
      "Bash(git reflog delete:*)",
      "Bash(git stash drop:*)",
      "Bash(git stash clear:*)",
      "Bash(git gc --prune=now:*)"
    ],
    "deny": []
  }
}
